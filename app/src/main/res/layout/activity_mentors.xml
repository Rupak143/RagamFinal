<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bguiblue">

    <!-- Back and Title -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"/>

    <!-- Search Bar -->
    <LinearLayout
        android:id="@+id/search_bar"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@id/top_bar"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="25dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_button_white"
        android:padding="12dp">

        <EditText
            android:id="@+id/search_input"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Carnatic Vocal Training"
            android:background="@android:color/transparent"
            android:textColor="@android:color/black" />

    </LinearLayout>

    <!-- Courses and Mentors Toggle -->
    <LinearLayout
        android:id="@+id/toggle_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_bar"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp">

        <Button
            android:id="@+id/btn_courses"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_button_white"
            android:text="Courses"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/btn_mentors"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_button_orange"
            android:text="Mentors"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <!-- Results Text -->
    <TextView
        android:id="@+id/result_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toggle_buttons"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:text="No mentors registered yet"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold"/>


    <!-- Scrollable Course Cards -->
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/result_text"
        android:layout_marginTop="-164dp"
        android:layout_marginBottom="70dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp" />
    </ScrollView>
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:gravity="center">

        <ImageView
            android:id="@+id/ic_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_home"
            android:contentDescription="Home"
            android:padding="16dp"
            android:scaleType="centerInside" />

        <ImageView
            android:id="@+id/ic_courses"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_courses"
            android:contentDescription="Courses"
            android:padding="16dp"
            android:scaleType="centerInside" />

        <ImageView
            android:id="@+id/ic_inbox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_inbox"
            android:contentDescription="Inbox"
            android:padding="16dp"
            android:scaleType="centerInside" />

        <ImageView
            android:id="@+id/ic_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_profile"
            android:contentDescription="Profile"
            android:padding="16dp"
            android:scaleType="centerInside" />
    </LinearLayout>
</RelativeLayout>
