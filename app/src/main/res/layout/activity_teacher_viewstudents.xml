<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bguiblue"
    android:padding="16dp">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/back_button"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_backblack"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp"
        android:layout_marginStart="4dp" />

    <!-- Page Title -->
    <TextView
        android:id="@+id/page_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enrolled Students"
        android:textStyle="bold"
        android:textSize="22sp"
        android:fontFamily="serif"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/back_button"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="30dp" />

    <!-- Scrollable Student List -->
    <ScrollView
        android:id="@+id/scroll_view_students"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/page_title"
        android:layout_marginTop="12dp"
        android:fillViewport="true"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:id="@+id/student_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Student Card (Repeat dynamically) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_button_white"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:elevation="4dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_profile"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:text="Rupak Varma"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:layout_marginBottom="4dp"  android:layout_height="match_parent" android:layout_width="match_parent"/>

                    <TextView
                        android:text="rupak@gmail.com"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="13sp"  android:layout_height="match_parent" android:layout_width="match_parent"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Repeat more student blocks dynamically -->

        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:gravity="center">

        <ImageView
            android:id="@+id/ic_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_home"
            android:contentDescription="Home"
            android:padding="10dp"
            android:scaleType="centerInside" />

        <ImageView
            android:id="@+id/ic_inbox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_inbox"
            android:contentDescription="Inbox"
            android:padding="10dp"
            android:scaleType="centerInside" />

        <ImageView
            android:id="@+id/ic_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_profile"
            android:contentDescription="Profile"
            android:padding="10dp"
            android:scaleType="centerInside" />
    </LinearLayout>
</RelativeLayout>



