<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bguionlywhite"
    android:padding="16dp">

    <!-- Back Button -->

    <!-- Title -->

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="33dp"
        android:layout_height="47dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_backblack" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terms and Conditions"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="20dp"/>

    <!-- Scrollable Terms -->
    <ScrollView
        android:id="@+id/terms_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <!-- Each Section with Bold Subheading -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Acceptance of Terms"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="5dp"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="By downloading or using Ragam, you agree to be bound by these Terms and Conditions. If you do not agree, please do not use the app."
                android:textSize="14sp"
                android:layout_marginBottom="20dp"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Eligibility"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:textSize="16sp"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="You must be at least 13 years old to use Ragam. By registering, you confirm that you meet the minimum age requirement."
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User Accounts"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Provide accurate, current, and complete information.\n• Maintain confidentiality of login credentials.\n• Report unauthorized usage immediately."
                android:textSize="14sp"
                android:layout_marginBottom="20dp"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Usage Guidelines"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• For educational use only.\n• Do not post offensive or unlawful content.\n• Do not reverse-engineer or exploit app features."
                android:textSize="14sp"
                android:layout_marginBottom="20dp"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Course Access"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Course content is personal-use only.\n• No resale or redistribution.\n• Ragam may remove content for violations."
                android:textSize="14sp"
                android:layout_marginBottom="20dp"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Payments and Refunds"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Some courses may be paid.\n• No refunds unless explicitly stated."
                android:textSize="14sp"
                android:layout_marginBottom="20dp"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Intellectual Property"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="5dp"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• All content belongs to Ragam or its mentors.\n• You are granted limited, non-transferable usage rights."
                android:textSize="14sp"
                android:layout_marginBottom="20dp"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Privacy Policy"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:textSize="16sp"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="We do not share your data without consent. View full policy in the app."
                android:textSize="14sp"
                android:layout_marginBottom="20dp"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Changes to Terms"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="We may update terms. You’ll be notified in-app or via email."
                android:textSize="14sp"
                android:layout_marginBottom="20dp"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Termination"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:textSize="16sp"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Accounts may be terminated for:\n• Violating terms\n• Unauthorized access or misuse"
                android:textSize="14sp"
                android:layout_marginBottom="20dp"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact Us"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:textSize="16sp"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email us at: support@ragamapp.com"
                android:textSize="14sp"
                android:textColor="@android:color/black" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
